    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/schedule": "^3.0.0",
    "@nestjs/swagger": "^6.2.0",
    "@nestjs/typeorm": "^9.0.1",
    "axios": "^1.4.0",
    "cache-manager": "5.2.4",
    "cache-manager-redis-store": "^3.0.1",
